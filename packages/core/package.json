    "verbose": true,
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": ["**/*test.ts"]
  },
  "files": [
    "cjs/",
    "esnext/",
    "types/"
  ]
